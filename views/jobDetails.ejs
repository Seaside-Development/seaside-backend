<html>
    <body>
        <script>
            function blabber(params) {
                console.log(params);
                idArray = params.split(",");
                jobid = idArray[0];
                status = idArray[1];
                console.log('Job id:', jobid, 'status:', status);
                fetch(`/jobrequests/changeStatus/${jobid}&${status}`, {
                    method: 'PUT',
                    params: JSON.stringify({
                        jobid: jobid,
                        status: status,
                    })  })
                    .then(response => response.json())
                    .then(data => {
                    console.log(data);
                });
            } 
          </script>
        <div class="content flex flex-col h-screen justify-center items-center py-24">
            <div class="card flex flex-col w-5/6 h-max shadow-md rounded-lg p-8 my-8" >
                    <!-- Title -->
                <h1 class="text-center font-semibold text-2xl border-b-2 align-text-bottom mb-6 pb-2">
                Job Details
                </h1>

                <div class="space-y-8 divide-y divide-gray-200">
                    <div>
                        <div class="mt-6 sm:mt-5 space-y-6 sm:space-y-5">
                            <div class="sm:grid sm:grid-cols-3 sm:gap-4 sm:items-start sm:border-t sm:border-gray-200 sm:pt-5" >
                                <label
                                    for="Title"
                                    class="block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2"
                                >
                                    Title
                                </label>
                            <div class="mt-1 sm:mt-0 sm:col-span-2">
                            <%= jobrequest.title %>
                            </div>
                        </div>
                        <div
                            class="sm:grid sm:grid-cols-3 sm:gap-4 sm:items-start sm:border-t sm:border-gray-200 sm:pt-5"
                        >
                            <label
                            for="complexity"
                            class="block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2"
                            >
                            Complexity
                            </label>
                            <div class="mt-1 sm:mt-0 sm:col-span-2">
                                <%= jobrequest.complexity %>
                            </div>
                        </div>
                        <div
                            class="sm:grid sm:grid-cols-3 sm:gap-4 sm:items-start sm:border-t sm:border-gray-200 sm:pt-5"
                        >
                            <label
                            for="industry"
                            class="block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2"
                            >
                            Industry
                            </label>
                            <div class="mt-1 sm:mt-0 sm:col-span-2">
                                <%= jobrequest.industry %>
                            </div>
                        </div>
                        <div
                            class="sm:grid sm:grid-cols-3 sm:gap-4 sm:items-start sm:border-t sm:border-gray-200 sm:pt-5"
                        >
                            <label
                            for="service"
                            class="block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2"
                            >
                            Service
                            </label>
                            <div class="mt-1 sm:mt-0 sm:col-span-2">
                                <%= jobrequest.service %>
                            </div>
                        </div>
                        <div
                            class="sm:grid sm:grid-cols-3 sm:gap-4 sm:items-start sm:border-t sm:border-gray-200 sm:pt-5"
                        >
                            <label
                            for="description"
                            class="block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2"
                            >
                            Description
                            </label>
                            <div class="mt-1 sm:mt-0 sm:col-span-2">
                                <%= jobrequest.description %>
                            </div>
                        </div>
                        <div
                            class="sm:grid sm:grid-cols-3 sm:gap-4 sm:items-start sm:border-t sm:border-gray-200 sm:pt-5"
                        >
                            <label
                            for="length"
                            class="block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2"
                            >
                            Length
                            </label>
                            <div class="mt-1 sm:mt-0 sm:col-span-2">
                                <%= jobrequest.length %>
                            </div>
                        </div>
                        <div
                            class="sm:grid sm:grid-cols-3 sm:gap-4 sm:items-start sm:border-t sm:border-gray-200 sm:pt-5"
                        >
                            <label
                            for="location"
                            class="block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2"
                            >
                            Location
                            </label>
                            <div class="mt-1 sm:mt-0 sm:col-span-2">
                                <%= jobrequest.location %>
                            </div>
                        </div>
                        <div
                            class="sm:grid sm:grid-cols-3 sm:gap-4 sm:items-start sm:border-t sm:border-gray-200 sm:pt-5"
                        >
                            <label
                            for="date"
                            class="block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2"
                            >
                            Date
                            </label>
                            <div class="mt-1 sm:mt-0 sm:col-span-2">
                                <%= jobrequest.startDate %>
                            </div>
                        </div>
                        <div
                            class="sm:grid sm:grid-cols-3 sm:gap-4 sm:items-start sm:border-t sm:border-gray-200 sm:pt-5"
                        >
                            <label
                            for="workarea"
                            class="block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2"
                            >
                            Work area
                            </label>
                            <div class="mt-1 sm:mt-0 sm:col-span-2">
                            Work Area Placeholder
                            </div>
                        </div>
                        </div>
                    </div>
                </div>
                
                

            </div>

            <div class="pt-5">
                <div class="flex justify-end">
                    <%= console.log(AContractor) %>
                    <% if (AContractor == false) { %>
                        <button
                        id="updateBtn"
                        type="button"
                        class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-md text-sm font-medium rounded-md text-white bg-fuchsia-600 hover:bg-fuchsia-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
                    >
                    <a href="/jobrequests/UpdatePage/<%= jobrequest._id %>">
                        Edit
                    </a>
                    </button>
                    <button
                        type="button"
                        class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-md text-sm font-medium rounded-md text-white bg-indigo-500 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
                    >
                    <a class="delete" data-doc="<%= jobrequest._id %>">
                        Delete
                    </a>
                    </button>
                    <button
                        type="button"
                        class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-md text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
                    >
                    <a href="/jobrequests/findcontractors?industry=<%= jobrequest.industry %>&id=<%= jobrequest._id %>&service=<%= jobrequest.service %>">
                        Find A Contractor
                    </a>
                    </button>
                        <%} else { %>
                            <button
                            type="button"
                            class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-md text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
                            id="RejectBtn"
                            value="<%= jobrequest._id %>,Pending"
                            onclick="blabber(document.getElementById('RejectBtn').value)"
                        >
                            Reject
                        </button>
                        <button
                            id="AcceptBtn"
                            value="<%= jobrequest._id %>,In Progress"
                            type="button"
                            onclick="blabber(document.getElementById('AcceptBtn').value)"
                            class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-md text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
                        >
                            Accept
                        </button>
                        <% } %>
                </div>
            </div>

        </div>
        <script>
            const trashcan = document.querySelector('a.delete')

            trashcan.addEventListener('click', (e) =>{
                const endpoint = `/jobrequests/removejob/${trashcan.dataset.doc}`
                fetch(endpoint, {
                    method: "DELETE"
                })
                .then(response => response.json())
                .then(data => window.location.href = data.redirect)
                .catch(err => console.log(err))
            })
        </script>
    </body>
</html>