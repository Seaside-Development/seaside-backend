<html lang="en">
<body>
  <div class="content flex flex-col h-full justify-center items-center py-24">
    <div class="card flex flex-col w-5/6 h-max shadow-md rounded-lg p-8 my-8">

      <!-- Title -->
    <h1 class="flex font-semibold text-2xl border-b-2 align-text-bottom">
      Job Preview
    </h1>
    <div class="card__sections flex h-full pt-3 justify-between">
      <div class="card__left w-1/6 "><p>heading</p></div>
      <div class="card__right w-5/6 border-2">
        <!-- row 1 -->
        <div
          class="grid grid-cols-4 gap-3  h-full "
        >
        <% if (jobrequests.length > 0) { %>
          <% jobrequests.forEach(jobrequest => { %>
          <!-- card 1 -->
        <div
            class="flex flex-col w-12/12 h-max rounded-lg shadow-lg overflow-hidden "
          >
            <div class="flex-shrink-0">

            <div class="flex-1 bg-white p-6 flex flex-col justify-between">
              <div class="flex-1">
                  <p class="w-max text-xl font-semibold text-gray-900 ">
                    <%= jobrequest.title %>
                  </p>
                  DETAILS
                  <a href="/jobrequests/<%= jobrequest.id %>">
                    <p class="mt-3 text-sm text-gray-500">
                      Description: <%= jobrequest.description %>
                    </p>  
                    <p class="w-max text-sm font-thin text-gray-900 ">
                      Complexity: <%= jobrequest.complexity %>
                    </p>
                    <p class="w-max text-sm font-thin text-gray-900 ">
                      Date posted:<%= jobrequest.startDate %>
                    </p>
                  </a>
              </div>
            </div>
          </div>
          <!-- card 1 end -->
        </div>
        <% }) %>
          <% } else { %>
            <p>There are no Jobs to display...</p>
          <% } %>
      </div>
    </div>
    </div>
  </div>
</body>
</html>