<html lang="en">
<body>
  <div class="content flex flex-col h-screen justify-center items-center py-24">
    <div class="card flex flex-col w-5/6 h-max shadow-md rounded-lg p-8 my-8">
      <!-- Title -->    
      <h1 class="text-center font-semibold text-2xl border-b-2 align-text-bottom mb-6 pb-2">All Job Listings</h1>
        <div class="card__sections flex h-full justify-between">
          <div class="card__left w-1/6 bg-blue-300"><p>JOBS</p></div> 
            <div class="card__right w-5/6  ">
                <!-- row 1 -->
                <div class="grid grid-cols-4 gap-3 h-full">
                  <% if (jobrequests.length > 0) { %>
                    <% jobrequests.forEach(jobrequest => { %>
                      <div class="flex flex-col w-12/12 h-max rounded-lg shadow-lg overflow-hidden border-2 border-slate-400">
                        <div class="flex-shrink-0">
                        <div class="flex-1 bg-white p-6 flex flex-col justify-between">
                            <div class="flex-1">
                              <p class="w-max text-xl font-semibold text-gray-900 border-b-2">
                                <%= jobrequest.title %>
                              </p>
                              <a href="/api/jobrequests/<%= jobrequest.id %>" class="text-sm font-medium text-gray-700">
                                <p class="mt-3 text-sm text-gray-500">
                                  <%= jobrequest.description %>
                                </p> 
                              </a> 
                          </div>
                        </div>
                      </div>
                    <% }) %>
                  <% } else { %>
                    <p>There are no Jobs to display...</p>
                  <% } %>
                </div>
            </div>
        </div>
    </div>
  </div>
</body>
</html>
